<div class="tae">
  <div ng-app="AmazonApp" class="maindiv">
    <!-- side bar -->
    <div ng-controller="CartCtrl">
      <div class="large-4 small-12 columns bob">
        <h1>HOW STRONG YO CART GAME?</h1>
        <div>
          <p>Number of items in cart: {{cart.totalItems}}</p>
          <p>Cart total: ${{cart.totalPrice}}</p>
          <input type="text" placeholder="Maeby FÃ¼nke" ng-model="person.name" />
          <button ng-click="checkout(cart.totalPrice, person.name, cart.items)" class="button small round">wuuuz up u rdy to orda? click diz n imma chex u out</button>
        </div>
        <div class="row">
          <div ng-repeat="item in cart.items" class="col-md-2">
            <p>{{item.name}} x{{item.cartQn}} <button ng-click="removeFromCart(item)" class="button tiny alert round">Drop 1</button></p>
          </div>
        </div>
      </div>
    </div>

  <!-- main  -->

    <div ng-controller="ItemsCtrl" class="large-8 columns">
      <div class="row">
        <div ng-repeat="item in items">
          <div class="large-3 small-5 columns">
            <h3>{{item.name}}</h3>
            <p text-align="center"><img src="{{item.url}}" class="image"></p>
            <div class="panel">
              <p class="text">
                {{item.description}}<br>
                Price: ${{item.price}}<br>
                Quantity: {{item.quantity}}<br>
              </p>
              <button ng-click="addToCart(item)" ng-disabled="item.isDisabled" class="button small success round">GIMMA DIZ ITEM!</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>