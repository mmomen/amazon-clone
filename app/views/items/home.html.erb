<%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/css/foundation.min.css" %>

<style>
  .image {
    width: auto;
    height: 15em;
  }

  body {
    background: transparent;
    background-image: url('http://www.akcli-voh.org/wp-content/uploads/2013/10/background2.jpg');
  }
</style>

<div ng-app="AmazonApp">
  <div ng-controller="CartCtrl">
    <!-- side bar -->
    <div class="large-4 small-12 columns">
      <h2>WUT U GOT IN YO CART:</h2>
      <div class="container-fluid">
        <div class="row">
          <div ng-repeat="item in cart.items" class="col-md-2">
            <p>{{item.name}} x{{item.cartQn}} <button ng-click="removeFromCart(item)" class="btn btn-warning btn-xs active">Drop 1</button></p>
          </div>
        </div>
      </div>
      <div>
        <p>Number of items in cart: {{cart.totalItems}}</p>
        <p>Cart total: ${{cart.totalPrice}}</p>
        <input type="text" placeholder="SAD HAM WHO SAIN" ng-model="person.name" />
        <button ng-click="checkout(cart.totalPrice, person.name, cart.items)" class="button small">wuuuz up u rdy to orda? click diz n imma chex u out</button>
      </div>
    </div>
  </div>

<!-- main  -->

  <div ng-controller="ItemsCtrl" class="large-8 columns">
    <div class="row">
        <div ng-repeat="item in items">
      <div class="large-3 small-5 columns">
          <h3>{{item.name}}</h3>
          <img src="{{item.url}}" class="image img-circle">
          <div class="panel">
            <p>
              {{item.description}}<br>
              Price: ${{item.price}}<br>
              Quantity: {{item.quantity}}<br>
            </p>
            <button ng-click="addToCart(item)" ng-disabled="item.isDisabled" class="button small">GIMMA DIZ ITEM!</button>
        </div>
          </div>
      </div>
    </div>
  </div>
</div>

